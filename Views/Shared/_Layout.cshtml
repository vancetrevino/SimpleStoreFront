<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Store Front: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Welcome to my store front</h1>
        <menu>
            <ul>
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="App" asp-action="Abouy">About</a></li>
            </ul>
        </menu>
    </header>
    <section>
        <h1>My Store Front @ViewBag.Title</h1>
        @RenderBody()
    </section>

    <footer>Copyright 2023 Vance Trevino</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>

    @RenderSection( "Scripts", false )
